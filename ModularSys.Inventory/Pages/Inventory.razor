@page "/inventory"
@using ModularSys.Data.Common.Entities.Inventory
@using MudBlazor
@using ModularSys.Data.Common.Entities
@inject IDialogService DialogService

<MudContainer MaxWidth="MaxWidth.False" Class="pa-0 h-100">
    <MudPaper Elevation="1" Class="pa-6 h-100 d-flex flex-column">
        <MudStack Spacing="2" Class="h-100">
            <MudText Typo="Typo.h4" GutterBottom="true">Inventory Management</MudText>

            <MudTabs Class="h-100"
                     Rounded="true"
                     Elevation="0"
                     Grow="true"
                     Dense="true"
                     ScrollButtons="ScrollButtons.Auto"
                     KeepPanelsAlive="true">

                <!-- Dashboard Tab -->
                <MudTabPanel Text="Dashboard" Icon="@Icons.Material.Filled.Dashboard">
                    <MudDivider Class="mb-4" />
                    <InventoryDashboard />
                </MudTabPanel>

                <!-- Products Tab -->
                <MudTabPanel Text="Products" Icon="@Icons.Material.Filled.Inventory2">
                    <MudDivider Class="mb-4" />
                    <ProductIndex />
                </MudTabPanel>

                <!-- Categories Tab -->
                <MudTabPanel Text="Categories" Icon="@Icons.Material.Filled.Category">
                    <MudDivider Class="mb-4" />
                    <CategoryIndex />
                </MudTabPanel>

                <!-- Sales Orders Tab -->
                <MudTabPanel Text="Sales Orders" Icon="@Icons.Material.Filled.ReceiptLong">
                    <MudDivider Class="mb-4" />
                    <SalesOrderIndex />
                </MudTabPanel>

                <!-- Purchase Orders Tab -->
                <MudTabPanel Text="Purchase Orders" Icon="@Icons.Material.Filled.ShoppingCart">
                    <MudDivider Class="mb-4" />
                    <PurchaseOrderIndex />
                </MudTabPanel>

                <!-- Inventory Transactions Tab -->
                <MudTabPanel Text="Inventory Transactions" Icon="@Icons.Material.Filled.SwapHoriz">
                    <MudDivider Class="mb-4" />
                    <InventoryTransactionIndex />
                </MudTabPanel>

                <!-- Stock Alerts Tab -->
                <MudTabPanel Text="Stock Alerts" Icon="@Icons.Material.Filled.NotificationsActive">
                    <MudDivider Class="mb-4" />
                    <StockAlerts />
                </MudTabPanel>

                <!-- Reports Tab -->
                <MudTabPanel Text="Reports" Icon="@Icons.Material.Filled.Assessment">
                    <MudDivider Class="mb-4" />
                    <InventoryReports />
                </MudTabPanel>

                <!-- Settings Tab -->
                <MudTabPanel Text="Settings" Icon="@Icons.Material.Filled.Settings">
                    <MudText Typo="Typo.h6" GutterBottom="true">Settings</MudText>
                    <MudDivider Class="mb-4" />
                    <MudStack AlignItems="@AlignItems.Center" Justify="@Justify.Center" Class="mt-6">
                        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Elevation="0">
                            Inventory settings coming soon...
                        </MudAlert>
                    </MudStack>
                </MudTabPanel>
            </MudTabs>
        </MudStack>
    </MudPaper>
</MudContainer>

@code {
    // Ready for tab-specific services when needed
}
